<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"> <!-- Important for handling insets in edge-to-edge -->

    <!-- Dialog Title Area -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:elevation="0dp"> <!-- Can add elevation if you want it distinct -->

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_select_services"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_close"
            app:title="@string/dialog_title_select_services"
            app:titleTextAppearance="?attr/textAppearanceHeadline6" /> <!-- Optional: For a close button in the toolbar -->
        <!-- Or, use a simple TextView if you don't need toolbar actions -->
        <!--
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_title_select_services"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />
        -->
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Optional: Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <!-- Content Area with RecyclerView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"> <!-- Important for RecyclerView height behavior -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_services_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_service_dialog" />
        <!-- Or match_parent if NestedScrollView is sized -->
    </androidx.core.widget.NestedScrollView>

    <!-- Optional: Separator before buttons -->
    <View
        android:id="@+id/button_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#000" />

    <!-- Action Buttons Area -->
    <LinearLayout
        style="?attr/buttonBarPositiveButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="16dp"> <!-- Helps with button styling -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_service_selection"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/action_cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit_service_selection"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_submit" />
        <!-- Outlined button style -->
        <!-- Contained button style (filled) -->
    </LinearLayout>

</LinearLayout>