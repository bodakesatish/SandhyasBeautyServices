<!-- res/layout/item_service_dialog.xml -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardElevation="0dp">
    <!-- Add margins if using cards -->
    <!-- Or a slightly different bg if needed -->
    <!-- Set to 0dp if you prefer no shadow within a dialog -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:orientation="horizontal"
        android:padding="8dp">
        <!-- Padding now on the inner LinearLayout -->


        <!-- Optional: Service Icon -->
        <ImageView
            android:id="@+id/image_view_service_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/service_icon_desc"
            android:src="@drawable/ic_default_service"
            android:visibility="gone"
            app:tint="?attr/colorPrimary"
            tools:visibility="visible" />
        <!-- Placeholder icon -->
        <!-- Accessibility -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                tools:text="Detailed Service Name that Could Be Really Quite Long Indeed" />

            <TextView
                android:id="@+id/text_view_service_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                tools:text="Approx. 45 min"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_view_service_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="$100.00" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/check_box_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="?attr/colorPrimary"
            android:checked="true"
            android:contentDescription="@string/select_service_checkbox_desc" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>