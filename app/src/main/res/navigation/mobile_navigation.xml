    <fragment
        android:id="@+id/navigation_billing"
        android:name="com.bodakesatish.sandhyasbeautyservices.ui.billing.BillEditorFragment"
        android:label="Billing"
        tools:layout="@layout/fragment_billing" >
        <argument
            android:name="appointmentId"
            app:argType="integer"
            android:defaultValue="0"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_add_services_to_appointment"
        android:name="com.bodakesatish.sandhyasbeautyservices.ui.appointment.EditAppointmentServicesFragment"
        android:label="Service"
        tools:layout="@layout/fragment_edit_appointment_services" >
        <argument
            android:name="appointmentId"
            app:argType="integer"
            android:defaultValue="0"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_create_appointment"
        android:name="com.bodakesatish.sandhyasbeautyservices.ui.appointment.AppointmentEditFragment"
        android:label="@string/title_add_appointment"
        tools:layout="@layout/fragment_appointment_edit" >
        <action
            android:id="@+id/action_createOrEditAppointmentFragment_to_appointmentBillDetailFragment"
            app:destination="@+id/navigation_appointment_bill"
            app:popUpTo="@+id/navigation_create_appointment"
            app:popUpToInclusive="true" />
        <!-- Other actions -->
        <argument
            android:name="appointmentId"
            app:argType="integer"
            android:defaultValue="0"/>
    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.bodakesatish.sandhyasbeautyservices.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/login_to_register"
            app:destination="@+id/register"/>
        <action
            android:id="@+id/login_to_home"
            app:destination="@+id/navigation_home"/>
    </fragment>

    <fragment
        android:id="@+id/register"
        android:name="com.bodakesatish.sandhyasbeautyservices.signup.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/register_to_home"
            app:destination="@+id/navigation_home"/>
        <action
            android:id="@+id/register_to_login"
            app:destination="@+id/login"/>
    </fragment>
</navigation>